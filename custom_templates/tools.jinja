{%- macro full_strompris(spotpris) -%}
    {%set hour = now().hour%}
    {%set month = now().month %}
    {%set extra = 0.01%}
    {% if month <= 3%} 
        {%if hour> 21 or hour < 6%} 
            {%set price=extra + 0.2145 %} 
        {%else%} 
            {%set price=extra + 0.3020 %} 
        {%endif %} 
    {%else%} 
        {%if hour> 21 or hour < 6%}
            {%set price=extra + 0.2980 %}
        {%else%}
        {%set price=extra + 0.3855%}
        {% endif %}
    {% endif %}
        {{price | round(4) + spotpris}}
{%- endmacro -%}

